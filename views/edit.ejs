<% include partials/header %>
<div class="container">
	
	<div class="row">
		<h1 style="text-align: center;"> Edit your post</h1>
			<div style="width: 30%; margin: 25px auto;">
				<form action="/models/<%=cmodel._id%>?_method=PUT" method="POST">
					<div class="form-group">
							<input class="form-control" type="text" value="<%=cmodel.name%>" name = "model[name]">
					</div>
					<div class="form-group">
							<input class="form-control" type="text" value="<%=cmodel.image%>" name = "model[image]"> 
					</div>
					<div class="form-group">
							<input class="form-control" type="text" value="<%=cmodel.description%>" name = "model[description]"> 
					</div>

					<div class="form-group">
							<input class="btn btn-lg btn-primary btn-block" type="submit">
					</div>
				
				</form> 
				<a href="/models">Go back</a>
			</div>
	</div>
</div>
<% include partials/footer %>
