<% include partials/header %>
<div class="container">

	<div class="row">
		<div class="col-md-3">
			<p class="lead">myExpressApp</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1 </li>
				<li class="list-group-item">Info 1 </li>
				<li class="list-group-item">Info 1 </li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="image-responsive" src="<%=model.image%>" >
				<div class="caption-full">
					<h4><%= model.name %></h4>
					<p> <%=model.description%> </p>
					<p><em>Author - <%=model.author.username%></em></p>
					
					<%if(cUser && model.author.id.equals(cUser._id)){%>

						<a class="btn btn-xs btn-warning" href="/models/<%=model._id%>/edit">Edit post</a>
						<form style="display : inline" action="/models/<%=model._id%>?_method=DELETE" method="POST">
							<button class="btn btn-xs btn-danger">Delete</button>
						</form>
					<%}%>
					<div style="display : inline">
						<a class="btn btn-xs btn-primary" href="/models/">back</a>
					</div>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<p><a class="btn btn-success" href="/models/<%=model._id%>/comments/new">Add new comment</a></p>
				</div>
				<hr>
				<% for(var i=0;i<model.comments.length;++i){%>
					<div class="row">
						<div class="col-md-12">
							<strong><%=model.comments[i].author.username%></strong>
							<span class="pull-right"> 10 days ago </span>
							<p> 
								<%=model.comments[i].text%>
							</p>
							<%if(cUser && model.comments[i].author.id.equals(cUser._id)){%>
								<a class="btn btn-xs btn-warning" href="/models/<%=model._id%>/comments/<%=model.comments[i]._id%>/edit">edit</a>
								<form style="display : inline" action="/models/<%=model._id%>/comments/<%=model.comments[i]._id%>/delete?_method=DELETE" method="POST">
									<button class="btn btn-xs btn-danger">Delete</button>
								</form>
							<%}%>
							<hr>
						</div>
					</div>
				<%}%>

			</div>
		</div>
	</div>





	

	
	

</div>
<% include partials/footer %>
